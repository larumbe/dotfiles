! URxvt.perl-ext-common: default,url-select,keyboard-select,clipboard,font-size

!--------------------
! keyboard-select
URxvt.keysym.M-z: perl:keyboard-select:activate
! The following line overwrites the default Meta-s binding and allows
! to activate keyboard-select directly in backward search mode:
URxvt.keysym.M-s: perl:keyboard-select:search

!---------------------
! url-select
! URxvt.perl-ext-common: ...,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/firefox -new-tab
URxvt.url-select.underline: true

!-----------------
! clipboard
! URxvt.perl-ext-common: ...,clipboard
! Recuerda aniadir on_sel_grab
! http://stoffe.deephacks.org/2012/03/10/copy-paste-urxvt.html
! Problema con xsel, con buffers de copia, primary secondary and clipboard
URxvt.keysym.M-c:     perl:clipboard:copy
URxvt.keysym.M-v:     perl:clipboard:paste
URxvt.keysym.M-C-v:   perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:	xclip -i -selection clipboard
URxvt.clipboard.pastecmd:	xclip -o -selection clipboard

